{
    "include": [
        "**/*",
        "**/.server/**/*",
        "**/.client/**/*",
        ".react-router/types/**/*",
        "./**/*"
    ],
    "compilerOptions": {
        "lib": ["DOM", "DOM.Iterable", "ES2022"],
        "types": ["@cobalt27/runtime", "node", "vite/client"],
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "rootDirs": [".", "./.react-router/types"],
        "baseUrl": ".",
        "paths": {
            "@/*": ["./app/*"],
            "sdk": ["./.cobalt/sdk.ts"],
            "$$types": ["./.cobalt/$$types"],
            "$$ctx": ["./server/ctx.ts"]
        },
        "esModuleInterop": true,
        "verbatimModuleSyntax": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "noImplicitThis": false
    },
    "exclude": []
}
