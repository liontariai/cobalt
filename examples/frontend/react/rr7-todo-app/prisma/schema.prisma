generator client {
  provider     = "prisma-client"
  output       = "generated/client"
  moduleFormat = "esm"

  previewFeatures = ["queryCompiler", "driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://"
}

model Todo {
  id        String   @id @default(cuid())
  text      String
  completed Boolean  @default(false)
  createdAt DateTime @default(now())

  ownerId String
}
