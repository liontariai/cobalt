{
    "name": "@cobalt27/generate",
    "version": "0.5.0-alpha.1",
    "module": "src/index.ts",
    "main": "src/index.ts",
    "types": "src/index.ts",
    "license": "SSPL-1.0",
    "files": [
        "dist/**/*",
        "src/**/*.ts",
        "!dist/**/__tests__/*",
        "!src/**/__tests__/*",
        "README.md",
        "package.json"
    ],
    "publishConfig": {
        "access": "public",
        "main": "dist/cjs/index.js",
        "module": "dist/esm/index.js",
        "types": "./dist/types/src/index.d.ts"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/liontariai/cobalt",
        "directory": "packages/generate"
    },
    "scripts": {
        "format": "prettier --write .",
        "bundle": "bun bundle.ts && tsc && rm -rf `find ./dist/ -type d -name __tests__`",
        "prepublishOnly": "bun run bundle"
    },
    "dependencies": {
        "@cobalt27/runtime": "workspace:*"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "prettier": "latest"
    },
    "peerDependencies": {
        "typescript": "~5.7.3"
    },
    "prettier": {
        "tabWidth": 4
    }
}
