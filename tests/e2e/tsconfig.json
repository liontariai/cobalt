{
    "include": ["./**/*"],
    "compilerOptions": {
        "lib": ["DOM", "DOM.Iterable", "ES2022"],
        "types": ["@cobalt27/runtime", "node", "@types/bun"],
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "$$ctx": ["tests/ctx.ts"],
            "$$types": ["tests/.$$types.ts"]
        },
        "esModuleInterop": true,
        "verbatimModuleSyntax": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "noImplicitThis": false
    },
    "exclude": []
}
